{
  "name": "node-js-logging",
  "version": "1.0.0",
  "description": "Node JS Logging dengan Winston",
  "license": "ISC",
  "author": "Wahyu Santoso",
  "type": "module",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!vendor/**/*.{js,jsx}"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "winston": "^3.18.3"
  }
}
